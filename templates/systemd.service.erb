[Unit]
Description=devpi
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @devpi_path %> -c  <%= @config_file %> --ldap-config  <%= @config_file %>
<% if @proxy -%>
Environment=http_proxy=<%= @proxy %>
Environment=https_proxy=<%= @proxy %>
<% end -%>

[Install]
WantedBy=multi-user.target
